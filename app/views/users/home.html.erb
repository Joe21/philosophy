<body class="background">

	<div class="container">
		
		<div id="home">
			<div class="col-lg-12">
				<h1 class="text-center" id="marketing">The Mirror Paradox</h1>
				<p class="text-center lead">Would you put a price on your future?</p>
			</div>
		</div>

		<div id="selector">
			<div class="container-fluid selection">
				<div class="row-fluid">
					<h1 class="col-lg-12 text-center" id="selection-header">Make Your Choice</h1>

					
					<div class="value-slider col-lg-12 col-lg-offset-4">
						<div class="noUiSlider"></div>
				    </div>
				    
				    <div class="info col-lg-6 col-md-offset-3">
					    <div class="age-dropdown">
					    	<p class="gender-header">Select your age range.</p>
					    	<%= select_tag(:age, options_for_select(['under 21', '21-25', '26-30', '31-35', '36-40', '41-45', '46-50', '51-55', '56-60', '61-65', '+65']), prompt: "Select Age")%>
					    </div>
					    <div class="gender-div">
					    	<p class="gender-header">Select your gender.</p>
						    <%= radio_button_tag(:gender, "Male", class: 'gender') %>
							<%= label_tag(:gender, "Male", class: 'gender-label') %>
							<br>
							<%= radio_button_tag(:gender, "Female", class: 'gender') %>
							<%= label_tag(:gender, "Female", class: 'gender-label')%>
					    </div>
				    </div>
				</div>
			</div>
			
			<div class="container-fluid button">
				<div class="row-fluid">
					<div id="submit-button">
					    <button id="submit_value">Submit</button>
					</div>
				</div>
			</div>

		</div>

	</div>

	<div id="leftControl" class="control">
		<img id="leftArrow" class="arrow left" style="width:60px" src="/assets/arrowleft2.png"></img>
	</div>

	<div id="rightControl" class="control col-md-8">
		<img id="rightArrow" class="arrow right" style="width:60px" src="/assets/arrowright2.png"></img>
	</div>

    <%= javascript_include_tag "home", "data-turbolinks-track" => true %>

</body>
